graph TB
    subgraph "Sales Context"
        Sales[Sales Service]
        SalesDB[(Sales DB)]
        Sales --> SalesDB
    end
    
    subgraph "Inventory Context"
        Inventory[Inventory Service]
        InventoryDB[(Inventory DB)]
        Inventory --> InventoryDB
    end
    
    subgraph "Shipping Context"
        Shipping[Shipping Service]
        ShippingDB[(Shipping DB)]
        Shipping --> ShippingDB
    end
    
    subgraph "Billing Context"
        Billing[Billing Service]
        BillingDB[(Billing DB)]
        Billing --> BillingDB
    end
    
    Sales -->|Customer-Supplier| Inventory
    Sales -->|Customer-Supplier| Billing
    Inventory -->|Partnership| Shipping
    Billing -->|Anti-Corruption Layer| Shipping
    
    style Sales fill:#dae8fc,stroke:#6c8ebf
    style Inventory fill:#d5e8d4,stroke:#82b366
    style Shipping fill:#fff2cc,stroke:#d6b656
    style Billing fill:#f8cecc,stroke:#b85450